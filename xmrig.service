# systemd user service for xmrig
# Install to ~/.config/systemd/user/ via: make install-services
[Unit]
Description=XMRig CPU+CUDA miner for P2Pool
After=p2pool.service
Requires=p2pool.service

[Service]
Type=simple
ExecStart=%h/src/jcomeauictx/xmrig/src/xmrig \
    --config %h/xmrig.json \
    -o 127.0.0.1:3333
Restart=on-failure
RestartSec=30

[Install]
WantedBy=default.target
